<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<TableLayout
	    android:id="@+id/generic_services_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

        <View
			android:id="@+id/view2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<!--Oxycoon-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical">

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="48px"
				android:text="@string/session_edit_text_default"
				android:textIsSelectable="true"
				android:id="@+id/session_edit_text"
				android:layout_gravity="center_horizontal" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center">

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/button_session_toggle"
					android:id="@+id/button_session_toggle"
					android:layout_gravity="center" />

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/button_session_save_file"
					android:id="@+id/button_session_save"
					android:layout_gravity="center" />
			</LinearLayout>
		</LinearLayout>
		<!--/Oxycoon-->

	</TableLayout>
</ScrollView>
